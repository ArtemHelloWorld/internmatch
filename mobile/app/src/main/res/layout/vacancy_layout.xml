<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/vacancy_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Заголовок"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/vacancy_salary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vacancy_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Описание"
        app:layout_constraintEnd_toEndOf="@+id/vacancy_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vacancy_title" />

    <Button
        android:id="@+id/vacancy_detail_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подробнее"
        app:layout_constraintTop_toBottomOf="@+id/vacancy_description"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/vacancy_salary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="₽"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/vacancy_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vacancy_title" />

</androidx.constraintlayout.widget.ConstraintLayout>